<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_pressed="false" >
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="@android:color/background_light" />
            <solid android:color="#FFF" />
            <size android:width="80dp" android:height="80dp"/>
        </shape>
</item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="@color/colorAccent" />
            <solid android:color="@color/Blue" />
            <size android:width="80dp" android:height="80dp"/>
        </shape>
    </item>
    <item android:state_activated="false">
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="@color/colorAccent" />
            <solid android:color="#999" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
</selector>