<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:visibility="visible"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/topbar_padding"
            android:paddingBottom="@dimen/topbar_padding"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            
    >
        <Button
                android:id="@+id/settings"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="@dimen/topbar_icon_size"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/ic_settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/fpsPreview"
        />

        <ToggleButton
                android:id="@+id/stacking"
                android:layout_width="@dimen/topbar_icon_size"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/raw_button"
                android:checked="true"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/eisPhoto"
                tools:visibility="visible"/>

        <ToggleButton
                android:id="@+id/eisPhoto"
                android:layout_width="@dimen/topbar_icon_size"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/eis_button"
                android:checked="true"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/stacking"
                app:layout_constraintEnd_toStartOf="@+id/quadRes"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"/>

        <ToggleButton
                android:id="@+id/quadRes"
                android:layout_width="@dimen/topbar_icon_size"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                
                android:background="@drawable/quad_button"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eisPhoto"
                app:layout_constraintEnd_toStartOf="@id/fpsPreview"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"/>

        <ToggleButton
                android:id="@+id/fpsPreview"
                android:layout_width="@dimen/topbar_icon_size"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                
                android:background="@drawable/fps_button"
                android:checked="true"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/quadRes"
                app:layout_constraintEnd_toStartOf="@+id/settings"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
