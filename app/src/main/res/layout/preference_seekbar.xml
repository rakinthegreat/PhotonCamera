<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:listPreferredItemHeight"
        android:paddingEnd="?android:scrollbarSize"
        android:paddingStart="?android:scrollbarSize"
>
    <ImageView
            android:layout_gravity="center|top"
            android:id="@android:id/icon"
            android:layout_width="@dimen/camera_settings_icon_size"
            android:layout_height="@dimen/camera_settings_icon_size"
            android:layout_marginTop="@dimen/camera_settings_entry_margin"
            android:layout_marginStart="@dimen/camera_settings_entry_margin"
            tools:src="@drawable/ic_focus"
            android:contentDescription="@string/icon_string"
    />
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/camera_settings_entry_margin"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/camera_settings_icon_size"
            android:layout_marginEnd="@dimen/camera_settings_entry_margin">
        <TextView
                android:textSize="@dimen/camera_settings_preference_font_size"
                android:ellipsize="marquee"
                android:id="@android:id/title"
                android:fadingEdge="horizontal"
                tools:text="SeekBar Title"
                android:gravity="center"
                android:textColor="?android:textColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="?android:textColorSecondary"
                android:id="@android:id/summary"
                android:layout_width="wrap_content"
                tools:text="SeekBar description"
                android:layout_height="wrap_content"
                android:layout_below="@android:id/title"
                android:layout_alignStart="@android:id/title"/>
        <SeekBar android:id="@+id/seekbar"
                 android:paddingTop="@dimen/preference_seekbar_padding"
                 android:paddingBottom="@dimen/preference_seekbar_padding"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@android:id/summary"
                 android:layout_toStartOf="@id/seekbar_value"/>
        <TextView android:layout_width="@dimen/preference_seekbar_value_text_width"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:textAppearanceSmall"
                  android:textColor="?android:textColorSecondary"
                  android:id="@+id/seekbar_value"
                  android:paddingStart="@dimen/preference_seekbar_value_padding"
                  android:paddingEnd="@dimen/preference_seekbar_value_padding"
                  android:layout_alignParentEnd="true"
                  android:layout_alignBottom="@id/seekbar"
                  android:layout_alignTop="@id/seekbar"
                  android:gravity="center"
                  tools:text="10000"
        />
    </RelativeLayout>
    <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:id="@android:id/widget_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/camera_settings_entry_margin"
            android:paddingEnd="@dimen/camera_settings_entry_margin"
            android:paddingStart="?android:scrollbarSize">
    </LinearLayout>

</LinearLayout>